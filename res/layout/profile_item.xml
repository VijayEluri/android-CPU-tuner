<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp" >

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold" >
    </TextView>

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/labelGovernor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="@string/labelGovernor" >
            </TextView>

            <TextView
                android:id="@+id/tvGov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:textSize="16sp" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:text="@string/labelCpuFreq" >
            </TextView>

            <LinearLayout
                android:id="@+id/ListView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvFreqMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:textSize="16sp" >
                </TextView>

                <TextView
                    android:id="@+id/tvFreqMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp" >
                </TextView>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/trServiceIcons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="5dp"
                android:text="@string/labelServices" >
            </TextView>

            <LinearLayout
                android:id="@+id/llServiceIcons"
                android:layout_width="wrap_content"
                android:layout_height="26dp" >

                <ImageView
                    android:id="@+id/ivServiceMD3g"
                    style="@style/styleServiceIcons"
                    android:src="@drawable/serviceicon_md_2g3g" />

                <ImageView
                    android:id="@+id/ivServiceMDCon"
                    style="@style/styleServiceIcons"
                    android:src="@drawable/serviceicon_mobiledata_con" />

                <ImageView
                    android:id="@+id/ivServiceSync"
                    style="@style/styleServiceIcons"
                    android:src="@drawable/serviceicon_sync" />

                <ImageView
                    android:id="@+id/ivServiceWifi"
                    style="@style/styleServiceIcons"
                    android:src="@drawable/serviceicon_wifi" />

                <ImageView
                    android:id="@+id/ivServiceGPS"
                    style="@style/styleServiceIcons"
                    android:src="@drawable/serviceicon_gps" />

                <ImageView
                    android:id="@+id/ivServiceBluetooth"
                    style="@style/styleServiceIcons"
                    android:src="@drawable/serviceicon_bluetooth" />

                <ImageView
                    android:id="@+id/ivServiceAirplane"
                    style="@style/styleServiceIcons"
                    android:layout_height="wrap_content"
                    android:src="@drawable/serviceicon_airplane" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>